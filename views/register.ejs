   <title>Register</title>

   <!-- Bootstrap core CSS -->
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

 </head>
 <body>

   
 
   <div class="container text-center">
     <form class="form-signin width" action="/register" method="POST">

        <h5 class="text-center"><%= err %></h5>
        
       <h2 class="form-signin-heading">Please Register</h2>
       <p style = "text-align: left">First Name</p>
       <input type="text" id="firstName" class="form-control" placeholder="First Name" autofocus required name="firstName" value="">

       <p style = "text-align: left">Last Name</p>
       <input type="text" id="lastName" class="form-control" placeholder="Last Name" autofocus required name="lastName" value="">

       <p style = "text-align: left">Gender</p>
       <select name="gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
       </select>

       <p style = "text-align: left">Age</p>
       <input type="text" id="lastName" class="form-control" placeholder="Age" autofocus required name="age" value="">

       <p style = "text-align: left">Email</p>
       <input type="email" id="email" class="form-control" placeholder="Email@email.com" autofocus required name="email" value="">

       <p style = "text-align: left">Phone</p>
       <input type="text" id="lastName" class="form-control" placeholder="Phone Number" autofocus required name="phone" value="">

       <p style = "text-align: left">Password</p>
       <input type="password" id="password" class="form-control" placeholder="Password" autofocus required name="password" value="">
       <br>
       <button class="btn btn-lg btn-info btn-block" type="submit">Register</button>
     </form>
     <a class="nav-link" href="">back to login</a>
     <a class="nav-link" href="/">back to homepage</a>

   </div> <!-- /container -->
   <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

 </body>
 
</html>